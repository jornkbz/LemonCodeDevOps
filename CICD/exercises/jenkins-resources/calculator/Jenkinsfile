pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Se hace el checkout de TODO el repo, pero Jenkinsfile est√° en proyecto1
                checkout([$class: 'GitSCM', 
                          branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/tu-usuario/tu-repo.git']]])
            }
        }
        
        stage('Compile') {
            steps {
                sh './gradlew compileJava'
            }
        }
        
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
    }
}
